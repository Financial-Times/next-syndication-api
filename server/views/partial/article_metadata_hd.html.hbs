<header>
    <h1>{{title}}</h1>
    <p><strong style="font-weight: bold">Date published:</strong> {{publishedDate}}</p>
    {{# if translatedDate }}<p><strong style="font-weight: bold">Date translated:</strong> {{translatedDate}}</p>{{/if}}
    {{# if byline }}<p><strong style="font-weight: bold;">{{byline}}</strong></p>{{/if}}
    <p><strong style="font-weight: bold">Source: FT.com</strong></p>
    <p><strong style="font-weight: bold;">Word count: {{wordCount}}</strong></p>
    {{# if rich }}
        <p><strong style="font-weight: bold;">Link To FT.com{{# if translationUrl }} (Original version){{/if}}: <a href="{{webUrl}}">{{webUrl}}</a></strong></p>
        {{# if translationUrl }}
            <p><strong style="font-weight: bold;">Link To FT.com ({{ translationLanguage }} version): <a href="{{translationUrl}}">{{translationUrl}}</a></strong></p>
        {{/if}}
    {{ else }}
        <p>Link To FT.com{{# if translationUrl }} (Original version){{/if}}: {{webUrl}}</p>
        {{# if translationUrl }}
        <p>Link To FT.com ({{ translationLanguage }} version): {{translationUrl}}</p>
        {{/if}}
    {{/if}}
</header>
