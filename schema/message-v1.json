{
  "title": "MessageV1",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "content_id": {
      "format": "uri",
      "type": "string"
    },
    "content_type": {
      "default": "article",
      "enum": [
        "article",
        "mediaresource",
        "package",
        "placeholder",
        "podcast",
        "video"
      ],
      "type": "string"
    },
    "contract_id": {
      "type": "string"
    },
    "contributor_content": {
      "default": false,
      "type": "boolean"
    },
    "download_format": {
      "type": "string"
    },
    "licence_id": {
      "type": "string"
    },
    "published_date": {
      "format": "date-time",
      "type": "string"
    },
    "state": {
      "default": "started",
      "enum": [
        "complete",
        "deleted",
        "error",
        "interrupted",
        "saved",
        "started"
      ],
      "type": "string"
    },
    "syndication_state": {
      "default": "yes",
      "enum": [
        "no",
        "null",
        "verify",
        "yes"
      ],
      "type": "string"
    },
    "time": {
      "format": "date-time",
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "user": {
      "type": "object",
      "properties": {
        "email": {
          "format": "email",
          "type": "string"
        },
        "first_name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        }
      },
      "required": [
        "email",
        "first_name",
        "surname",
        "id"
      ]
    },
    "type": {
      "default": "db.persist",
      "enum": [
        "db.persist"
      ],
      "type": "string"
    },
    "version": {
      "enum": [
        "v1"
      ],
      "default": "v1",
      "type": "string"
    }
  },
  "required": [
    "_id",
    "content_id",
    "contract_id",
    "licence_id",
    "published_date",
    "state",
    "syndication_state",
    "time",
    "type",
    "user",
    "version"
  ]
}
